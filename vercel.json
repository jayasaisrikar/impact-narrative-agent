{
  "name": "impact-narrative-agent",
  "version": 2,
  "buildCommand": "npm run build",
  "devCommand": "npm run server",
  "functions": {
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/process-posts",
      "schedule": "0 * * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/((?!api|health|assets).*)",
      "destination": "/index.html"
    }
  ]
}
